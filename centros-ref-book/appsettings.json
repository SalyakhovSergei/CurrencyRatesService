{
  "ConnectionStrings": {
    "mainDB": "Server=localhost;Port=5432;Database=ref_book;User Id=postgres;Password=14867"
  },

  "CacheConfiguration": {
    "CacheExpirationTime": 1, //время после которого очищается кэш в часах в любом случае
    "CacheSlidingTime": 1 //время после которого очищвается кэш если к нему нет обращений в минутах
  },
  "ReceivingConfiguration": {
    "StartWorkFrom": 0, //время после запуска приложения когда начинается загрузка данных
    "IntervalOfReceive": 4 //период запуска
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.EventLog" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Logs\\RefBook\\log_ref_book.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 20000000,
          "retainedFileCountLimit": 10 //,
          //"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "EventLog",
        "Args": {
          "source": "CURRENCY",
          "logName": "CURRENCY",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 6 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 100 }
      }
    ],
    "Properties": {
      "Application": "CURRENCY"
    }
  },
  "AllowedHosts": "*",
  "ShouldLogRequest": true
}
